@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5">¡Bienvenido, @ViewBag.NombreUsuario!</h1>
        <p class="lead">Este es tu panel de administración para gestionar el inventario de la tienda.</p>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Categorías</h5>
                    <p class="card-text display-6">@ViewBag.TotalCategorias</p>
                    <a href="/Empleado/Categoria" class="btn btn-primary btn-sm">Ver categorías</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Productos</h5>
                    <p class="card-text display-6">@ViewBag.TotalProductos</p>
                    <a href="/Empleado/Producto" class="btn btn-primary btn-sm">Ver productos</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">Clientes</h5>
                    <p class="card-text display-6">@ViewBag.TotalClientes</p>
                    <a href="/Empleado/Cliente" class="btn btn-primary btn-sm">Ver clientes</a>
                </div>
            </div>
        </div>
    </div>
</div>