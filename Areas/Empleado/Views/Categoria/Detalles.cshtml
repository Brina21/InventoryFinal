@model InventoryFinal.Models.Categoria

@{
    ViewData["Title"] = "Detalles Categoría";
}

<h2 class="mb-4">Detalles de la Categoría</h2>

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
</dl>

<a asp-action="Editar" asp-route-id="@Model?.Id" class="btn btn-warning btn-sm">Editar</a>
<a asp-action="Index" class="btn btn-outline-secondary btn-sm">Volver a Lista</a>