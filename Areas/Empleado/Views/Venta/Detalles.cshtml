@using InventoryFinal.DTO
@model VentaConDetallesDTO

<h2>Detalles de la Venta</h2>

<p><strong>Fecha:</strong> @Model.FechaVenta.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Usuario:</strong> @Model.NombreUsuario</p>
<p><strong>Cliente:</strong> @(string.IsNullOrEmpty(Model.NombreCliente) ? "Sin cliente" : Model.NombreCliente)</p>
<p><strong>Total:</strong> @Model.Total €</p>

<h4>Productos:</h4>
<table class="table table-sm">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Unidades</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DetalleVentas)
        {
            <tr>
                <td>@item.NombreProducto</td>
                <td>@item.PrecioUnitario €</td>
                <td>@item.Unidades</td>
                <td>@(item.PrecioUnitario * item.Unidades) €</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
