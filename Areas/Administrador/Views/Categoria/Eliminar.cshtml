@model InventoryFinal.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h2 class="mb-4 text-danger">¿Estás seguro de que deseas eliminar esta categoría?</h2>

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
</dl>

<form asp-action="Eliminar">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
