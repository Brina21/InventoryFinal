@model InventoryFinal.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2 class="mb-4 text-danger">¿Está seguro que quiere eliminar este cliente?</h2>

<dl class="row">
    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

    <dt class="col-sm-4">Teléfono</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

    <dt class="col-sm-4">Fecha Creación</dt>
    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCreacion)</dd>
</dl>

<form asp-action="Eliminar">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
