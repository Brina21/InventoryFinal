@using InventoryFinal.DTO
@model CompraConDetallesDTO

<h2>Eliminar Compra</h2>
<p>¿Seguro que quieres eliminar esta compra?</p>

<p><strong>Fecha:</strong> @Model.FechaCompra.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Total:</strong> @Model.Total €</p>

<form asp-action="EliminarConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
