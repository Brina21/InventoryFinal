@page "/register"
@model Inventory.Views.Session.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center min-h-screen bg-gradient-to-br from-gray-100 to-gray-200">
    <div class="bg-white p-8 rounded-3xl shadow-2xl max-w-md w-full border border-gray-200">
        <h2 class="text-3xl font-bold text-center text-gray-800">¡Bienvenido a la familia!</h2>
        <p class="text-center text-gray-600">Crea tu cuenta para empezar</p>

        <div class="bg-purple-100 p-4 rounded-xl text-center mt-4 shadow-md">
            <p class="font-semibold text-purple-700">Regístrate</p>
            <p class="text-gray-500 text-sm">Rellena tus datos para crear una nueva cuenta</p>
        </div>

        <form method="post" class="mt-6">
            <label class="block font-medium text-gray-700">Nombre</label>
            <div class="relative mt-1">
                <input type="text" name="FullName" class="w-full p-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-500 shadow-sm" placeholder="Ingresa tu nombre">
                <span class="absolute inset-y-0 right-3 flex items-center text-gray-400">&#128100;</span>
            </div>
            
            <label class="block mt-4 font-medium text-gray-700">Apellidos</label>
            <div class="relative mt-1">
                <input type="text" name="FullName" class="w-full p-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-500 shadow-sm" placeholder="Ingresa tus apellidos">
                <span class="absolute inset-y-0 right-3 flex items-center text-gray-400">&#128100;</span>
            </div>

            <label class="block mt-4 font-medium text-gray-700">Correo electrónico</label>
            <div class="relative mt-1">
                <input type="email" name="Email" class="w-full p-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-500 shadow-sm" placeholder="Ingresa tu correo electrónico">
            </div>

            <label class="block mt-4 font-medium text-gray-700">Contraseña</label>
            <div class="relative mt-1">
                <input type="password" name="Password" class="w-full p-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-500 shadow-sm" placeholder="Crea una contraseña">
            </div>

            <label class="block mt-4 font-medium text-gray-700">Confirmar contraseña</label>
            <div class="relative mt-1">
                <input type="password" name="ConfirmPassword" class="w-full p-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-purple-500 shadow-sm" placeholder="Confirma tu contraseña">
            </div>

            <button type="submit" class="w-full bg-gradient-to-r from-purple-500 to-purple-700 text-white p-3 rounded-lg mt-4 hover:from-purple-600 hover:to-purple-800 transition shadow-lg">
                ✨ Crear cuenta ✨
            </button>
        </form>

        <p class="text-center text-sm text-gray-600 mt-4">¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Session")" class="text-purple-600 font-medium hover:underline">Iniciar sesión</a></p>
    </div>
</body>
</html>