<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Inven-Tory</title>
    <link rel="icon" href="@Url.Content("~/favicon.png")" sizes="192x192" type="image/png" />

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .content {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* Botones principales (primarios) en rojo */
        .btn-primary {
            background-color: #C1272D;
            border-color: #C1272D;
        }

            .btn-primary:hover, .btn-primary:focus {
                background-color: #a02126;
                border-color: #a02126;
                box-shadow: 0 0 0 0.25rem rgba(193, 39, 45, 0.5);
            }

        /* Botones secundarios outline en rojo */
        .btn-outline-secondary {
            color: #C1272D;
            border-color: #C1272D;
        }

            .btn-outline-secondary:hover, .btn-outline-secondary:focus {
                background-color: #C1272D;
                color: white;
                border-color: #C1272D;
            }

        /* Enlaces en rojo */
        a {
            color: #C1272D;
        }

            a:hover {
                color: #a02126;
                text-decoration: none;
            }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>

    <div class="container content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
