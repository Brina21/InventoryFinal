@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center min-h-screen bg-gradient-to-br from-gray-100 to-gray-200">
    <div class="bg-white p-8 rounded-3xl shadow-2xl max-w-md w-full border border-gray-200">
        <h2 class="text-3xl font-bold text-center text-gray-800">¡Bienvenido a la familia!</h2>
        <p class="text-center text-gray-600">Crea tu cuenta para empezar</p>

        <div class="bg-purple-100 p-4 rounded-xl text-center mt-4 shadow-md">
            <p class="font-semibold text-purple-700">Regístrate</p>
            <p class="text-gray-500 text-sm">Rellena tus datos para crear una nueva cuenta</p>
        </div>

        <form asp-action="Register" method="post" class="mt-6">
            <label asp-for="Nombre" class="block font-medium text-gray-700">Nombre</label>
            <input asp-for="Nombre" class="w-full p-3 border rounded-lg ..." placeholder="Ingresa tu nombre" />
            <span asp-validation-for="Nombre" class="text-red-600"></span>

            <label asp-for="Email" class="block font-medium text-gray-700 mt-4">Correo electrónico</label>
            <input asp-for="Email" class="w-full p-3 border rounded-lg ..." placeholder="Ingresa tu correo electrónico" />
            <span asp-validation-for="Email" class="text-red-600"></span>

            <label asp-for="Contrasenya" class="block font-medium text-gray-700 mt-4">Contraseña</label>
            <input asp-for="Contrasenya" type="password" class="w-full p-3 border rounded-lg ..." placeholder="Crea una contraseña" />
            <span asp-validation-for="Contrasenya" class="text-red-600"></span>

            <label asp-for="ConfirmPassword" class="block font-medium text-gray-700 mt-4">Confirmar contraseña</label>
            <input asp-for="ConfirmPassword" type="password" class="w-full p-3 border rounded-lg ..." placeholder="Confirma tu contraseña" />
            <span asp-validation-for="ConfirmPassword" class="text-red-600"></span>

            <button type="submit" class="w-full bg-gradient-to-r from-purple-500 to-purple-700 text-white p-3 rounded-lg mt-4 hover:from-purple-600 hover:to-purple-800 transition shadow-lg">
                ✨ Crear cuenta ✨
            </button>
        </form>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }

        <p class="text-center text-sm text-gray-600 mt-4">¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Home")" class="text-purple-600 font-medium hover:underline">Iniciar sesión</a></p>
    </div>
</body>
</html>